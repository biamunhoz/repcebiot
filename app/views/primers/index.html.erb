<p id="notice"><%= notice %></p>

<h1>Primers</h1>

<table>
  <thead>
    <tr>
      <th>Descrição</th>
      <th>Protocolo PCR</th>
      <th>Gel de acarose</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @primers.each do |primer| %>
      <tr>
        <td><%= primer.descricao %></td>
        <td><%= primer.protocolopcr %></td>
        <td><%= primer.geldeacarose %></td>
        <td><%= link_to 'Mostrar', primer %></td>
        <td><%= link_to 'Editar', edit_primer_path(primer) %></td>
        <td><%= link_to 'Apagar', primer, method: :delete, data: { confirm: 'Você tem certeza?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Primer', new_primer_path %>
