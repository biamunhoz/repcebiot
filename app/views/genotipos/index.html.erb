<script type="text/javascript">
    $(function() {
        oTable = $('#genetipos').dataTable({
            "iDisplayLength": 30,
            "sPaginationType":"full_numbers",
            "bJQueryUI":true,
            "bLengthChange":false,
            "oLanguage":{
                "sInfo":                "Mostrando de _START_ até _END_ de _TOTAL_ registros",
                "sInfoFiltered":        "Filtrado de _MAX_ registros no total",
                "sZeroRecords":         "Sem resultados",
                "sInfoEmpty":           "",
                "sSearch":              "Buscar",
                "oPaginate": {
                    "sFirst":           "Primeiro",
                    "sPrevious":        "Anterior",
                    "sNext":            "Próximo",
                    "sLast":            "Ultimo"
                }
            }
        });
    });
</script>

<p id="notice"><%= notice %></p>

<h3>Genótipos</h3>

<table id="genetipos" class="table table-bordered display">
  <thead>
    <tr>
      <th>Nome</th>
      <th>Cadastrado por</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @genotipos.each do |genotipo| %>
      <tr>
        <td><%= genotipo.nome %></td>
        <td><%= genotipo.usuario.nomeUsuario %></td>
        <td><%= link_to 'Mostrar', genotipo, class: 'btn btn-info' %></td>
        <% if session[:perfil] == "Administrador" %>
		<td><%= link_to 'Editar', edit_genotipo_path(genotipo), class: 'btn btn-warning' %></td>
		<td><%= link_to 'Apagar', genotipo, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'btn btn-danger'  %></td>
        <% else %>
	      <th></th>
	      <th></th>        
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'Novo Genótipo', new_genotipo_path , class: 'btn btn-info'%>

