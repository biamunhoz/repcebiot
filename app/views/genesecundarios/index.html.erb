<p id="notice"><%= notice %></p>

<h3>Genes secundários</h3>

<table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Gene principal</th>
      <th>Gene associado</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @genesecundarios.each do |genesecundario| %>
      <tr>
        <td><%= genesecundario.genealvo.simbolo %></td>
        <td><%= genesecundario.geneassociado.simbolo%></td>
        <% if session[:perfil] == "Administrador" %>        
          <td><%= link_to 'Mostrar', genesecundario, class: 'btn btn-info' %></td>
          <td><%= link_to 'Editar', edit_genesecundario_path(genesecundario), class: 'btn btn-warning' %></td>
          <td><%= link_to 'Apagar', genesecundario, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'btn btn-danger' %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if session[:perfil] == "Administrador" %>
  <%= link_to 'Novo Gene secundário', new_genesecundario_path(:idalvo => params[:idalvo]), class: "btn btn-success"  %>
<% end %>
