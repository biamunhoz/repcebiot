<table class="table table-striped table-bordered table-hover table-condensed">
<thead>
<tr>
  <th>Login</th>
  <th>Nome </th>
  <th>Tipo </th>
  <th>E-mail Principal</th>
  <th>E-mail Alternativo</th>
  <th>E-mail USP</th>
  <th>Telefone</th>
  <th>Ramal</th>
</tr>
</thead>

<tbody>
<tr>
  <td><%= @usuario.loginUsuario %></td>
  <td><%= @usuario.nomeUsuario %></td>
  <td><%= @usuario.tipoUsuario %></td>
  <td><%= @usuario.emailPrincipalUsuario %></td>
  <td><%= @usuario.emailAlternativoUsuario %></td>
  <td><%= @usuario.emailUspUsuario %></td>
  <td><%= @usuario.numeroTelefoneFormatado %></td>
  <td><%= @usuario.ramalUsp %></td>
</tr>
</tbody>
</table>

<table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Vinculo</th>
      <th>Nome do vinculo</th>
      <th>Sigla da unidade</th>
      <th>Nome da unidade</th>
      <th>Codigo do setor</th>
      <th>Nome do setor</th>
      <th>Nome da função</th>
    </tr>
  </thead>

  <tbody>
    <% @tipovinculo = TipoVinculo.where(usuario_id: @usuario.id) %>
    <% @tipovinculo.each do |v| %>
        <tr>
          <td><%= v.tipoVinculo %></td>
          <td><%= v.nomeVinculo %></td>
          <td><%= v.siglaUnidade %></td>
          <td><%= v.nomeUnidade %></td>
          <td><%= v.codigoSetor %></td>
          <td><%= v.nomeSetor %></td>
          <td><%= v.nomeAbreviadoFuncao %></td>
        </tr>
    <% end %>
  </tbody>
</table>


<%= link_to 'Voltar', :back, class: 'btn btn-dark active' %>
