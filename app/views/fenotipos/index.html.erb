<p id="notice"><%= notice %></p>

<h3>Fenótipos</h3>

<table class="table table-striped table-bordered table-hover table-condensed">
  <thead>
    <tr>
      <th>Nome</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @fenotipos.each do |fenotipo| %>
      <tr>
        <td><%= fenotipo.nome %></td>
        <td><%= link_to 'Mostrar', fenotipo, class: 'btn btn-info'  %></td>
        <td><%= link_to 'Editar', edit_fenotipo_path(fenotipo), class: 'btn btn-warning'  %></td>
        <td><%= link_to 'Apagar', fenotipo, method: :delete, data: { confirm: 'Você tem certeza?' }, class: 'btn btn-danger' %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Novo Fenótipo', new_fenotipo_path, class: 'btn btn-info' %>
